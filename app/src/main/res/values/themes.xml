<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CuLibraryApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CuLibraryApp" parent="Base.Theme.CuLibraryApp" />

    <style name="manrope_regular_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="manrope_light_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/manrope_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="manrope_medium_textview" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="manrope_semi_bold_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="manrope_bold_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="manrope_edit_text_style" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">0dp</item>
        <item name="android:includeFontPadding">false</item>
<!--        <item name="android:backgroundTint">@color/bg_color_grey_dark</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="manrope_edit_text_style_with_lines" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:includeFontPadding">false</item>
<!--        <item name="android:backgroundTint">@color/bg_color_grey_dark</item>-->
<!--        <item name="android:textColorHint">@color/text_color_hint</item>-->
        <!--        <item name="android:inputType">textMultiLine</item>-->
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
    </style>


    <style name="EditTextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
<!--        <item name="android:textColorHint">@color/lightest_grey</item>-->
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
<!--        <item name="hintTextColor">@color/lightest_grey</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <style name="InputTextInputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="passwordToggleEnabled">true</item>
        <!--  <item name="passwordToggleDrawable">@drawable/custom_selector_eye</item>-->
    </style>

    <style name="MaterialCardEditTextStyle" parent="">
        <item name="background">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">#EBECF3</item>
        <item name="strokeWidth">1sp</item>
        <item name="cardCornerRadius">@dimen/_7sdp</item>

    </style>


    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:cursorVisible">true</item>
<!--        <item name="android:textCursorDrawable">@color/app_color</item>-->
    </style>


    <!-- Button style -->
    <style name="button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="backgroundColor">@null</item>
        <item name="backgroundTintMode">add</item>
        <item name="android:background">@drawable/button_background_shape</item>
    </style>

    <style name="button_style_blue" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="backgroundColor">@null</item>
        <item name="backgroundTintMode">add</item>
<!--        <item name="android:background">@drawable/button_background_shape_blue</item>-->
    </style>


    <!-- Button style -->
    <style name="button_style_border_only" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="backgroundColor">@null</item>
        <item name="backgroundTintMode">add</item>
<!--        <item name="android:background">@drawable/button_roundcorner</item>-->
    </style>


    <style name="CardTopCornerRadius" parent="">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="cornerSizeTopLeft">@dimen/_55sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>